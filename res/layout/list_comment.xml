<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llListComment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="40dp"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:textColor="@color/comment_color"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:id="@+id/icVote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/link_gri"
            android:textSize="14sp"
            fontawesometext:fa_icon="fa-thumbs-o-up" />

        <TextView
            android:id="@+id/tvCommentVote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/icVote"
            android:gravity="center"
            android:textColor="@color/link_gri"
            android:textSize="14sp" />

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:id="@+id/icUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tvCommentVote"
            android:textColor="@color/link_gri"
            android:textSize="14sp"
            fontawesometext:fa_icon="fa-user" />

        <TextView
            android:id="@+id/tvCommentAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/icUser"
            android:textColor="@color/link_dark_gri"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>